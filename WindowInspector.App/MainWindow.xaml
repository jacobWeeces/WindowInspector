<Window x:Class="WindowInspector.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowInspector.App"
        xmlns:viewModels="clr-namespace:WindowInspector.App.ViewModels"
        mc:Ignorable="d"
        Title="Window Inspector" 
        Height="400" 
        Width="500"
        WindowStyle="ToolWindow"
        Topmost="True"
        ResizeMode="CanResize">
    
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main content area -->
        <Border Grid.Row="0"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Margin="0,0,0,10">
            <TextBox x:Name="HierarchyTextBox"
                     Text="{Binding HierarchyText, Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     Padding="8"
                     Background="#FAFAFA"
                     BorderThickness="0">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Foreground" Value="#333333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Border>

        <!-- Status bar with copy button -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Status text -->
            <Border Grid.Column="0"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    Padding="5"
                    Margin="0,0,10,0">
                <TextBlock Text="{Binding StatusText}"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Copy button -->
            <Button Grid.Column="1"
                    Command="{Binding CopyToClipboardCommand}"
                    ToolTip="Copy element details to clipboard"
                    Padding="8,5">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"
                          Fill="#333333"
                          Width="16"
                          Height="16"
                          Stretch="Uniform"
                          Margin="0,0,5,0"/>
                    <TextBlock Text="Copy"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
